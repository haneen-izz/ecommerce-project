
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<section class="h-100 gradient-form" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-5">
        <div class="card rounded-3 text-black">
          <div class="row g-0">
            <div class="col-lg-12">
              <div class="card-body p-md-5 mx-md-4">

                <div class="text-center">
                  <%= image_tag ("logo.png") ,style: "width: 300px;" %>
            

                  <h4 class="mt-1 mb-5 pb-1"> to our store</h4>
                </div>

                <form>
                  <p>Please login to your account</p>
                      <br/>
                     <div class="form-outline mb-4">
                     <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control"  ,placeholder:"Enter Phone number or email address"  %>
                     <%= f.label :email , class:"form-label"  %>
                    </div>
                     
                      <div class="form-outline mb-4">
                      <%= f.password_field :password, autocomplete: "current-password" ,class:"form-control"  ,placeholder:"Enter password"  %>
                        <%= f.label :password , class:"form-label"%>
                      </div>

                
                       <div class="text-center pt-1 mb-5 pb-1 actions">
                      <%= f.submit "Log in", class:"btn btn-primary btn-block gradient-custom-2 mb-3"  %>
                       </div>
              
                  <div class="d-flex align-items-center justify-content-center pb-4">
                    <p class="mb-0 me-2">Don't have an account?</p>
                      <%= link_to "Sign up", new_user_registration_path %>
                    <div class="signup-devise">
                  </div>
                 </div>

                </form>

              </div>
            </div>
          
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<%end%>