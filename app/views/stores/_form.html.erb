<%= form_with(model: @store) do |store|  %>


<div class = "form">
<%= store.label :name ,  class:"form-label" %>
<%= store.text_field :name , class:"form-control" %>

<%= store.label :user_id ,  class:"form-label" %>

<select name="store[user_id]" id="store_user_id" >
  <option selected="selected" value="">Choose Owner</option>
<%@users.each do  |row|%>
<% if row.role == 'owner'%>
  <option value="<%=row.id%>" class="form-control"><%= row.email%></option>
<%end%>
  <%end%>
</select>

</br>
<%= store.submit  class:"btn btn-secondary"%>
</div>
<%end%>