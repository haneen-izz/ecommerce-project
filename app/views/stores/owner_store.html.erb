      <td>
        <div class="d-flex align-items-center">
          <div class="ms-3">
            <p class="fw-bold mb-1"><%=row.name%></p>
          </div>
        </div>
      </td>
      



      <td class="text-center">
         <%=link_to "show ", store_path(row) , class:"btn btn-success btn-sm btn-rounded"%>

         <%=link_to "Edit Store ", edit_owner_store_path(row) ,class:"btn btn-primary btn-sm btn-rounded"%>
       
         <%=link_to "delete Store", destroy_owner_store_path(row), data: {'turbo-method': :delete  , turbo_confirm: 'Are you sure?'},class:"btn btn-danger btn-sm btn-rounded"%></td>
      </td>
    </tr>
 <%end%>
